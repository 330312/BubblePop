{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["wxt/client"]
  },
  "include": [
    "entrypoints",
    "src",
    "types.ts",
    "selectionListener.ts",
    "wxt.config.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
