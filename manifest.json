{
  "manifest_version": 3,
  "name": "BubblePop",
  "version": "1.0.0",
  "description": "通过整合多种信息源，提供简洁高效的信息获取体验，打破信息茧房。",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "https://*.newsapi.org/*",
    "https://*.serpapi.com/*",
    "https://*.bing.com/*",
    "https://*.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "news-popup.html",
      "icons/*",
      "styles.css"
    ],
    "matches": ["<all_urls>"]
  }]
}